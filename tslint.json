{
  "defaultSeverity": "error",
  "extends": "tslint-config-airbnb",
  "jsRules": {},
  "rules": {
    "max-line-length": false
  },
  "rulesDirectory": [],
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "tslint.autoFixOnSave": true,
  "format": "verbose",
  "include": ["src/**/*.ts", "tests/**/**/*.ts"],
  "exclude": ["./node_modules"]
}
