{
  "name": "streakr-server",
  "version": "1.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "set NODE_ENV=PROD&& node dist/src/server.js",
    "dist": "sh ./scripts/dist.sh",
    "dev": "set NODE_ENV=DEV&& nodemon --exec ts-node -- ./src/server.ts",
    "prod": "npm run build && npm start",
    "lint": "tslint --project tsconfig.json",
    "local-unit-tests": "set NODE_ENV=LOCAL&& jest --coverage --config=./jest.unit.config.js",
    "local-intergration-tests": "set NODE_ENV=LOCAL&& jest --config=./jest.intergration.config.js",
    "local-test": "set NODE_ENV=LOCAL&& jest --config=./jest.test.config.js",
    "unit-tests": "set NODE_ENV=TEST&& jest --watchAll --config=./jest.unit.config.js",
    "intergration-tests": "set NODE_ENV=TEST&& jest --watchAll --config=./jest.intergration.config.js",
    "test": "set NODE_ENV=TEST&& jest --config=./jest.test.config.js",
    "test:debug": "node --inspect node_modules/.bin/jest --runInBand"
  },
  "keywords": [],
  "author": "Reece Kidd",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/yargs": "^13.0.0",
    "agenda": "^2.0.2",
    "aws-sdk": "^2.471.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "config": "^2.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.16.3",
    "joi": "^13.6.0",
    "jsonwebtoken": "^8.4.0",
    "moment-timezone": "^0.5.25",
    "mongoose": "^5.5.12",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/agenda": "^2.0.4",
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.9",
    "@types/joi": "^13.6.3",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/moment-timezone": "^0.5.12",
    "@types/mongoose": "^5.3.1",
    "@types/nodemailer": "^6.2.0",
    "@types/passport": "^0.4.7",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.7",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint&& pretty-quick --staged --verbose",
      "pre-push": "npm run local-test"
    }
  }
}
